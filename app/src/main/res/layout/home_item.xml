<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/coupon_home_ad_ll"
    android:layout_width="fill_parent"
    android:layout_height="300dp">

    <cn.edu.zafu.easemob.widget.ViewFlow
        android:id="@+id/mpviewflow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    </cn.edu.zafu.easemob.widget.ViewFlow>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="#88252525">
        <cn.edu.zafu.easemob.widget.CircleFlowIndicator
            android:padding="2dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/mpviewflowindic"
            android:layout_gravity="center_horizontal|bottom"
            app:radius="4dip"
            app:circleSeparation = "20dip"
            app:inactiveType="fill"
            app:activeType="fill"
            app:activeColor="#ff0000"
            app:inactiveColor="#ffffff"
            />
    </LinearLayout>

</FrameLayout>